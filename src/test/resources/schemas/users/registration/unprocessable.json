{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["message", "errors"],
  "properties": {
    "message": {
      "type": "string",
      "enum": ["Validation failed"]
    },
    "errors": {
      "type": "array",
      "required": ["message", "field"],
      "properties": {
        "message": { "type": "string" },
        "field": {
          "type": "string",
          "enum": ["roleId", "email"]
        }
      },
      "minItems": 1,
      "additionalProperties": false
    }
  },
  "additionalProperties": true
}
