{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["status", "message", "errors"],
  "properties": {
    "status": {
      "type": "boolean",
      "const": false
    },
    "message": {
      "type": "string",
      "const": "Unauthorized"
    },
    "data": { "type": "null" },
    "errors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["message"],
        "properties": {
          "message": {
            "type": "string",
            "const": "Unauthorized access. Please log in."
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
