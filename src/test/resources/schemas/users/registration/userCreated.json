{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["success", "message", "data", "invitation"],
  "properties": {
    "success": { "type": "boolean", "const": true },
    "message": { "type": "string", "const": "Invite sent" },
    "data": {
      "type": "object",
      "required": [
        "id",
        "email",
        "status",
        "roleName"
      ],
      "properties": {
        "id": {
          "type": "string",
          "format": "uuid"
        },
        "email": {
          "type": "string",
          "format": "email"
        },
        "status": {
          "type": "string",
          "const": "INACTIVE"
        },
        "roleName": {
          "type": "string",
          "enum": [
            "ADMIN",
            "MANAGER",
            "DEVELOPER"
          ]
        }
      },
      "additionalProperties": false
    },
    "invitation": { "type": "string" }
  },
  "additionalProperties": false
}
