{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["status", "message", "data"],
  "properties": {
    "status": {
      "type": "boolean",
      "const": true
    },
    "message": {
      "type": "string",
      "const": "Roles retrieved successfully"
    },
    "data": {
      "type": "object",
      "required": ["roles"],
      "properties": {
        "roles": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "roleName"],
            "properties": {
              "id": {
                "type": "string",
                "format": "uuid"
              },
              "roleName": {
                "type": "string",
                "enum": ["DEVELOPER", "ADMIN", "MANAGER"]
              }
            }
          }
        }
      }
    },
    "errors": { "type": "null" }
  }
}
