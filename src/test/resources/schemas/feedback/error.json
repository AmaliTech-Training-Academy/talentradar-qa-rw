{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "allOf": [
    { "$ref": "../common/base-response.json" },
    {
      "type": "object",
      "properties": {
        "success": { "const": false }
      },
      "required": ["success", "errors"]
    }
  ],
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "errors": { "const": "Invalid request data" },
        "message": { "const": "Invalid request data" },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["field", "message"],
            "properties": {
              "field": { "type": "string" },
              "message": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "required": ["errors", "message", "details"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "errors": { "const": "Authentication required" },
        "message": { "const": "Valid manager credentials required" }
      },
      "required": ["errors", "message"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "errors": { "const": "Access denied" },
        "message": { "const": "Manager can only provide feedback for developers in their team" }
      },
      "required": ["errors", "message"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "errors": { "const": "Resource not found" },
        "message": { "const": "Developer not found" }
      },
      "required": ["errors", "message"],
      "additionalProperties": false
    },
    {
      "type": "object",
      "properties": {
        "errors": { "const": "Internal server error" },
        "message": { "const": "An unexpected error occurred" }
      },
      "required": ["errors", "message"],
      "additionalProperties": false
    }
  ]
}
